@model OnlineShop.Web.Areas.Admin.Models.UserDeleteViewModel

@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-4">
    <h1 class="mb-4">Delete User</h1>
    
    <h3>Are you sure you want to delete the following user?</h3>
    <p><strong>User Name:</strong> @Model.UserName</p>
    <p><strong>Email:</strong> @Model.Email</p>

    <form method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a href="@Url.Action("Index", "User", new { area = "Admin" })" class="btn btn-secondary">Cancel</a>
    </form>
</div>