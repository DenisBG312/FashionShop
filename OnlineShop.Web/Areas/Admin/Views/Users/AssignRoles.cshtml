@using Microsoft.AspNetCore.Mvc.TagHelpers
@model OnlineShop.Web.Areas.Admin.Models.AssignRolesViewModel

<div class="container mt-4">
    <h1>Assign Roles to @Model.UserName</h1>

    <form asp-action="AssignRoles" method="post">
        <input type="hidden" asp-for="UserId" />

        <table class="table table-bordered">
            <thead>
            <tr>
                <th>Role</th>
                <th>Assigned</th>
            </tr>
            </thead>
            <tbody>
            @for (int i = 0; i < Model.Roles.Count; i++)
            {
                <tr>
                    <td>
                        @Model.Roles[i].RoleName
                    </td>
                    <td>
                        <input asp-for="Roles[i].IsAssigned" type="checkbox" />
                        <input asp-for="Roles[i].RoleName" type="hidden" />
                    </td>
                </tr>
            }
            </tbody>
        </table>

        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</div>