@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";  // Use the shared layout
}

<div class="container mt-5">
    <h1 class="mb-4 text-center">Admin Dashboard</h1>

    <div class="row">
        <!-- Users Section -->
        <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
            <div class="card shadow-lg border-primary h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title">Users Management</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">View and manage registered users of the system. Add, update, or remove users as needed.</p>
                    <a href="@Url.Action("Index", "Users", new { area = "Admin" })" class="btn btn-outline-primary w-100">Go to Users</a>
                </div>
            </div>
        </div>

        <!-- Products Section -->
        <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
            <div class="card shadow-lg border-success h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title">Products Management</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Manage products for the store. Add, edit, and delete products from the inventory.</p>
                    <a href="@Url.Action("Index", "Product", new { area = "Admin" })" class="btn btn-outline-success w-100">Go to Products</a>
                </div>
            </div>
        </div>

        <!-- Orders Section -->
        <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
            <div class="card shadow-lg border-danger h-100">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title">Orders Management</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Track and manage customer orders. View order status, process cancellations, and updates.</p>
                    <a href="@Url.Action("Index", "Orders", new { area = "Admin" })" class="btn btn-outline-danger w-100">Go to Orders</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Reports and Settings Section -->
    <div class="row mt-4">
        <div class="col-sm-12 col-md-6 mb-4">
            <div class="card shadow-lg border-warning h-100">
                <div class="card-header bg-warning text-white">
                    <h5 class="card-title">Reports</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Generate and view detailed reports on sales and store performance over time.</p>
                    <a href="@Url.Action("Reports", "Dashboard", new { area = "Admin" })" class="btn btn-outline-warning w-100">View Reports</a>
                </div>
            </div>
        </div>

        <div class="col-sm-12 col-md-6 mb-4">
            <div class="card shadow-lg border-secondary h-100">
                <div class="card-header bg-secondary text-white">
                    <h5 class="card-title">Settings</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Adjust global application settings such as payment options, shipping methods, and others.</p>
                    <a href="@Url.Action("Settings", "Dashboard", new { area = "Admin" })" class="btn btn-outline-secondary w-100">Go to Settings</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom CSS for Styling -->
<style>
    .card-header {
        font-size: 1.2rem;
        font-weight: bold;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: 600;
    }

    .card-body p {
        font-size: 1.1rem;
        line-height: 1.6;
    }

    .btn {
        font-size: 1rem;
        padding: 10px;
        border-radius: 5px;
        font-weight: 500;
    }

    .card {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .btn-outline-primary {
        border-color: #007bff;
        color: #007bff;
    }

    .btn-outline-success {
        border-color: #28a745;
        color: #28a745;
    }

    .btn-outline-danger {
        border-color: #dc3545;
        color: #dc3545;
    }

    .btn-outline-warning {
        border-color: #ffc107;
        color: #ffc107;
    }

    .btn-outline-secondary {
        border-color: #6c757d;
        color: #6c757d;
    }

    .card-body .btn {
        transition: all 0.3s ease-in-out;
    }

    .card-body .btn:hover {
        background-color: rgba(0, 0, 0, 0.1);
        transform: translateY(-5px);
    }

    .container h1 {
        font-size: 2.5rem;
        color: #343a40;
        font-weight: 700;
        margin-bottom: 40px;
    }

    .row .col-md-6, .row .col-lg-4 {
        padding: 10px;
    }

    .row .col-sm-12 {
        padding: 10px;
    }

    .card-title {
        font-size: 1.2rem;
        font-weight: bold;
    }

    .card-text {
        font-size: 1rem;
        margin-bottom: 1rem;
    }

    @@media (max-width: 767px) {
        .card-header {
            text-align: center;
        }

        .card-body {
            text-align: center;
        }
    }

</style>
