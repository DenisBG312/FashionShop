@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="mb-5 text-center text-primary">Admin Dashboard</h1>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <div class="col">
            <div class="card h-100 shadow border-primary">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h5 class="card-title mb-0">Users Management</h5>
                </div>
                <div class="card-body d-flex flex-column justify-content-between">
                    <p class="card-text">Manage registered users, update their information, or remove users as necessary.</p>
                    <a href="@Url.Action("Index", "User", new { area = "Admin" })" class="btn btn-outline-primary w-100">Go to Users</a>
                </div>
            </div>
        </div>

        <!-- Products Section -->
        <div class="col">
            <div class="card h-100 shadow border-success">
                <div class="card-header bg-success text-white text-center py-3">
                    <h5 class="card-title mb-0">Products Management</h5>
                </div>
                <div class="card-body d-flex flex-column justify-content-between">
                    <p class="card-text">Add, edit, or remove products from the store's inventory and ensure everything is up to date.</p>
                    <a href="@Url.Action("Index", "Product", new { area = "Admin" })" class="btn btn-outline-success w-100">Go to Products</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 shadow border-danger">
                <div class="card-header bg-danger text-white text-center py-3">
                    <h5 class="card-title mb-0">Orders Management</h5>
                </div>
                <div class="card-body d-flex flex-column justify-content-between">
                    <p class="card-text">Track and manage customer orders. View order details, process cancellations, and more.</p>
                    <a href="@Url.Action("Index", "Order", new { area = "Admin" })" class="btn btn-outline-danger w-100">Go to Orders</a>
                </div>
            </div>
        </div>
    </div>
</div>
