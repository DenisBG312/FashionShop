@model OnlineShop.Web.ViewModels.Product.ProductDetailsViewModel

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Product Details</h2>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">@Model.Name</h4>
                </div>

                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p class="card-text"><strong>Description:</strong> @Model.Description</p>
                            <p class="card-text"><strong>Price:</strong> @Model.Price.ToString("C")</p>
                            <p class="card-text"><strong>Stock Quantity:</strong> @Model.StockQuantity</p>
                        </div>

                        <div class="col-md-6 text-center">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" style="max-height: 300px; object-fit: cover;" />
                            }
                            else
                            {
                                <p class="text-muted">No image available</p>
                            }
                        </div>
                    </div>
                </div>

                <div class="card-footer text-center">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>