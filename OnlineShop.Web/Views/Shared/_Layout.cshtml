@using static OnlineShop.Common.ApplicationConstants
@{
    int currentYear = DateTime.UtcNow.Year;
    string footerYear = (ReleaseYear == currentYear) ? $"{currentYear}" : $"{ReleaseYear} - {currentYear}";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/images/online-shopping.ico" rel="icon" type="image/x-icon" />
    <title>@ViewData["Title"] - FashionShop</title>
    <link rel="stylesheet" href="~/css/bootswatchTheme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
<style>
/* Custom Navbar Styles */
.navbar-brand {
    margin-right: auto;
}

.navbar-nav .nav-item {
    padding: 0.5rem 0;
}

.nav-link {
    font-size: 1rem;
    display: flex;
    align-items: center;
}

@@media (max-width: 768px) {
    /* Stack items vertically on mobile */
    .navbar-nav {
        flex-direction: column;
    }

    /* Center align logo on desktop, left align on mobile */
    .navbar-brand {
        margin-right: 0;
    }

    /* Align search and login partial to the left on mobile */
    .d-flex.flex-column.align-items-start {
        align-items: flex-start;
        width: 100%;
    }

    /* Full width for the search bar in mobile view */
    .input-group {
        width: 100%;
    }
}
</style>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <!-- Logo on the left -->
                <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                    <img src="~/images/logo.png" alt="Logo" style="max-width: 60px; height: auto;">
                </a>

                <!-- Toggler for mobile view -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Collapsible menu on the right -->
                <div class="collapse navbar-collapse justify-content-end" id="navbarContent">
                    <ul class="navbar-nav me-auto text-center">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home <i class="fa-solid fa-house"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Product" asp-action="Index">Products <i class="fa-solid fa-shirt"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="ShoppingCart" asp-action="Index">My Shopping Cart <i class="fa-solid fa-cart-shopping"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Order" asp-action="Index">My Orders <i class="fa-solid fa-list"></i></a>
                        </li>
                    </ul>

                    <!-- Search and Login aligned on the left in mobile view -->
                    <div class="d-flex flex-column align-items-start">
                        <partial name="_LoginPartial" /> <!-- Login on the left -->
                        <form class="d-flex mt-2 w-100" method="get" action="@Url.Action("Index", "Product")">
                            <div class="input-group">
                                <input class="form-control" type="search" placeholder="Search by brand" name="searchTerm" value="@Context.Request.Query["searchTerm"]" aria-label="Search">
                                <button class="btn btn-outline-light" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </nav>
    </header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; @footerYear - OnlineShop.Web
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
