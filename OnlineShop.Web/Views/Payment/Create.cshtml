@model OnlineShop.Web.ViewModels.Payment.CreatePaymentViewModel

@{
    ViewData["Title"] = "Create Payment";
}

<h1>Create Payment</h1>

@if (TempData["PaymentSuccess"] != null)
{
    <script type="text/javascript">
        Swal.fire({
            title: 'Payment Successful!',
            text: 'Your payment was completed successfully.',
            icon: 'success',
            confirmButtonText: 'OK'
        });
    </script>
}

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="OrderId" />
    <input type="hidden" asp-for="TotalAmount" />

    <div>
        <label>Order Total: </label>
        <span>@Model.TotalAmount.ToString("C")</span>
    </div>

    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PaymentMethod"></label>
        <select asp-for="PaymentMethod" class="form-control">
            <option value="">Select a payment method</option>
            <option value="0">Cash</option>
            <option value="1">Bank Transfer</option>
            <option value="2">Digital Wallet</option>
            <option value="3">Debit Card</option>
            <!-- Add other payment methods -->
        </select>
        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Pay @Model.TotalAmount.ToString("C")</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}