@model IEnumerable<OnlineShop.Data.Models.Order>

@{
    ViewData["Title"] = "My Orders";
}

<h1>My Orders</h1>

<table class="table">
    <thead>
    <tr>
        <th>Order ID</th>
        <th>Order Date</th>
        <th>Total Amount</th>
        <th>Status</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.Id</td>
            <td>@order.OrderDate.ToString("d")</td>
            <td>@order.TotalAmount.ToString("C")</td>
            <td>@(order.IsCompleted ? "Completed" : "Pending")</td>
            <td>
                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info">View</a>
            </td>
        </tr>
    }
    </tbody>
</table>