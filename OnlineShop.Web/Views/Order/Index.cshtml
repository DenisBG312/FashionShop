@model List<OnlineShop.Web.ViewModels.Order.OrderIndexViewModel>

@{
    ViewData["Title"] = "My Orders";
}

<h1 class="mb-4">My Orders</h1>

<div class="row">
    @foreach (var order in Model)
    {
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-light" style="background-color: #e7f3fe;">
                <!-- Light blue card background color -->
                <div class="card-body text-dark">
                    <!-- Change text color to dark -->
                    <h5 class="card-title">Order #@order.CustomOrderNumber</h5>
                    <p class="card-text">
                        <strong>Order Date:</strong> @order.OrderDate.ToString("MMMM dd, yyyy")<br />
                        <strong>Total Amount:</strong> @order.TotalAmount.ToString("C")<br />
                        <strong>Status:</strong>
                        <span class="badge @(order.IsCompleted ? "badge-success" : "badge-warning")" style="background-color: @(order.IsCompleted ? "#28a745" : "#ffc107"); color: white;">
                            @(order.IsCompleted ? "Completed" : "Pending")
                        </span>
                    </p>
                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Details" asp-route-id="@order.OrderId" class="btn" style="background-color: #007bff; color: white;">
                            View Details <i class="fa-solid fa-eye"></i>
                        </a>
                        <a href="javascript:void(0);" onclick="confirmDelete(@order.OrderId)" class="btn" style="background-color: #dc3545; color: white;">
                            Delete <i class="fa-solid fa-trash"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function confirmDelete(orderId) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                // Create a form to send the POST request
                const form = document.createElement('form');
                form.method = 'POST'; // Set method to POST
                form.action = '/Order/Delete'; // Set the correct URL

                // Create a hidden input for the order ID
                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'id'; // Name should match your action parameter
                input.value = orderId;

                // Append the input to the form and submit
                form.appendChild(input);
                document.body.appendChild(form);
                form.submit();
            }
        });
    }
</script>
